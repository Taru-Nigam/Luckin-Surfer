@model GameCraft.Models.Product

@{
    ViewData["Title"] = "GameCraft - Get Your Card!";
}

<section class="get-card-section content-section">
    <div class="card-content-wrapper">
        <img src="data:image/png;base64,@(Convert.ToBase64String(Model.ImageData))" alt="@Model.Name" class="gamecraft-card-image" onerror="this.onerror=null;this.src='https://placehold.co/300x200/333/fff?text=GameCraft+Card';" />
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>

        <div class="card-benefits-section">
            <h3>Benefits of Your GameCraft Card:</h3>
            <ul>
                <li><i class="fas fa-ticket-alt"></i> **Seamless Ticket Tracking:** All your game tickets are digitally stored on your card.</li>
                <li><i class="fas fa-gift"></i> **Exclusive Member Perks:** Access special discounts and offers available only to cardholders.</li>
                <li><i class="fas fa-trophy"></i> **Earn & Redeem Points:** Accumulate prize points with every game and redeem them for awesome rewards.</li>
                <li><i class="fas fa-calendar-alt"></i> **Early Access & Invites:** Get priority access to new games, events, and exclusive tournaments.</li>
                <li><i class="fas fa-star"></i> **Level Up Your Fun:** The more you play, the more rewards and status you unlock!</li>
            </ul>
        </div>

        <p class="card-price">Card Price: <strong>$@Model.Price.ToString("F2")</strong></p>

        <form asp-action="StartProductCheckout" asp-controller="Payment" method="post">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <button type="submit" class="get-card-button">Buy now</button>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        // Ensure Font Awesome is linked in _Layout.cshtml for icons to display.
    </script>
}
