@model Order // Declare the model type

@{
    ViewData["Title"] = "Card Order Details";
}

<div class="order-detail-page">
    <h2>Order Details - Order #@Model.OrderId</h2>

    <div class="order-info">
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("F2")</p>
    </div>

    <h3>Items Ordered</h3>
    <table class="items-table">
        <thead>
            <tr>
                <th>Card Name</th>
                <th>Quantity</th>
                <th>Price Each</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.CardOrderDetails)
            {
                <tr>
                    <td>@detail.Card.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice.ToString("F2")</td>
                    <td>@((detail.Quantity * detail.UnitPrice).ToString("F2"))</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("MyAccount", "Account")" class="back-button">Back to Order History</a>
</div>