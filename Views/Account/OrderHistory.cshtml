@model List<GameCraft.Models.Order>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Order History";
}

<h1 class="mb-6">Order History</h1>

@if (Model.Count == 0)
{
    <p>No orders found.</p>
}
else
{
    <table class="table-admin-list">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Total Amount</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.ShippingName</td>
                    <td>@order.ShippingEmail</td>
                    <td>@order.ShippingPhone</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn-action btn-edit" href="@Url.Action("OrderDetails", "Order", new { id = order.OrderId })">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}