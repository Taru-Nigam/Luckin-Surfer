<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameCraft</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameCraft.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
</head>
<body>
    <header class="main-header">
        
        <nav class="navbar navbar-expand-lg navbar-dark gamecraft-navbar">
           
            <div class="container-fluid top-header-content">
                

                <a class="navbar-brand header-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/GameCraft logo.png" alt="GameCraft Logo" class="brand-logo" /> 
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="main-nav-links navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Prizes">Prizes</a>
                        </li>
                        @if (User.Identity.IsAuthenticated) // Check if the user is authenticated
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="MyAccount">My Account</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">My Account</a> <!-- Redirect to login if not authenticated -->
                            </li>
                        }
                    </ul>

                    <div class="auth-buttons">
                        <button class="login-button" onclick="location.href='/Account/Login'">Login</button>
                        <button class="signup-button" onclick="location.href='/Account/Register'">Sign Up</button>
                        <button onclick="location.href='@Url.Action("Login", "Employee")'">Employee Login</button>
                    </div>
                    <div class="cart-icon" id="cart-icon">
                        <a class="nav-link" href="/Cart/Cart">
                            <img src="~/Images/cart icon.png" alt="Cart Icon" style="width: 50px; height: 50px;" />
                            <span class="cart-count" id="cartCount">0</span>
                        </a>
                        <div class="cart-preview" style="display: none;">
                            <p>Your cart is empty.</p>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header> 

    <div>
        <main role="main">
            
            @RenderBody() 
        </main>
    </div>

    <footer class="site-footer">
        
        <div class="container-fluid">
            
           Copyright &copy; 2025 - GameCraft 
        </div>
    </footer> 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.querySelector('.cart-icon').addEventListener('mouseenter', function() {
            document.querySelector('.cart-preview').style.display = 'block';
        });
        document.querySelector('.cart-icon').addEventListener('mouseleave', function() {
            document.querySelector('.cart-preview').style.display = 'none';
        });
        // Example function to update cart count
        function updateCartCount(count) {
            const cartCount = document.getElementById('cartCount');
            cartCount.innerText = count;
            cartCount.style.display = count > 0 ? 'block' : 'none'; // Show or hide based on count
        }
        // Call this function whenever an item is added to the cart
        // updateCartCount(3); // Example: Update to 3 items
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
