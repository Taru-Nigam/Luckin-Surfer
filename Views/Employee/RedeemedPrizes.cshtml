@model List<GameCraft.Models.RedeemedPrize> // Declare the model type

@{
    ViewData["Title"] = "Redeemed Prizes";
    Layout = "_EmployeeLayout";
}

<section class="employee-redeemed-prizes-section">
    <div class="container">
        <h2 class="employee-section-title">Recently Redeemed Prizes</h2>

        <div class="employee-table-container">
            <table class="employee-table">
                <thead>
                    <tr>
                        <th>Redemption ID</th>
                        <th>Prize Name</th>
                        <th>Player ID</th>
                        <th>Tickets Spent</th>
                        <th>Timestamp</th>
                        <th>Processed By</th> @* New column *@
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var redemption in Model)
                        {
                            <tr>
                                <td>@redemption.Id</td> @* Using the Redemption record ID *@
                                <td>@redemption.Product.Name</td> @* Accessing prize name via navigation property *@
                                <td>@redemption.Customer.Name (@redemption.Customer.CustomerId)</td> @* Accessing player name/ID via navigation property *@
                                <td>@redemption.TicketsSpent Tickets</td>
                                <td>@redemption.RedemptionDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                <td>@redemption.EmployeeName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">No redeemed prizes found.</td> @* Adjusted colspan *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
