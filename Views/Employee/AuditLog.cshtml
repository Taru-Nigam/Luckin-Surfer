@model List<GameCraft.Models.AuditLog> // Declare the model type

@{
    ViewData["Title"] = "Audit Log";
    Layout = "_EmployeeLayout";
}

<section class="employee-audit-log-section">
    <div class="container">
        <h2 class="employee-section-title">Employee Audit Log</h2>

        <div class="employee-table-container">
            <table class="employee-table">
                <thead>
                    <tr>
                        <th>Log ID</th>
                        <th>Action</th>
                        <th>Employee</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Id</td>
                                <td>@log.Action</td>
                                <td>@log.EmployeeName</td>
                                <td>@log.Timestamp.ToString("yyyy-MM-dd hh:mm tt")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">No audit logs found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>