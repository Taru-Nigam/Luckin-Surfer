@model List<GameCraft.Models.AuditLog>

@{
    ViewData["Title"] = $"Audit Log for {ViewBag.UserName}";
    Layout = "_AdminLayout";
}

<h1 class="mb-6">Audit Log for User: @ViewBag.UserName (ID: @ViewBag.CustomerId)</h1>

<a asp-action="ManageUsers" asp-controller="Admin" class="btn btn-secondary mb-4">Back to Manage Users</a>

<table class="table-admin-list">
    <thead>
        <tr>
            <th>Log ID</th>
            <th>Action</th>
            <th>Timestamp</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Id</td>
                    <td>@log.Action</td>
                    <td>@log.Timestamp.ToString("yyyy-MM-dd hh:mm tt")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(log.Details))
                        {
                            <div id="details-@log.Id" class="log-details-content">
                                <pre>@log.Details</pre>
                            </div>
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No audit logs found for this user.</td>
            </tr>
        }
    </tbody>
</table>
