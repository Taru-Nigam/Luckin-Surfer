@model GameCraft.Models.Product
@{
    Layout = "_AdminLayout";
    bool isNew = Model.ProductId == 0;
    ViewData["Title"] = isNew ? "Add New Prize" : "Edit Prize";
}

<h1 class="mb-6">@ViewData["Title"]</h1>

<div class="form-container">
    <form asp-action="AddOrEditPrize" asp-controller="Admin" method="post" class="form-admin" novalidate>
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-input" required />
            <span asp-validation-for="Name" class="text-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-textarea" required></textarea>
            <span asp-validation-for="Description" class="text-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" min="0" class="form-input" required />
            <span asp-validation-for="Price" class="text-error"></span>
        </div>

        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-select" asp-items="new Microsoft.AspNetCore.Mvc.Rendering.SelectList(ViewBag.Categories, "CategoryId", "Name")" required>
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-error"></span>
        </div>

        <button type="submit" class="btn-primary">@ (isNew ? "Add Prize" : "Save Changes")</button>
        <a href="@Url.Action("ManagePrizes", "Admin")" class="btn-secondary ml-4">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}