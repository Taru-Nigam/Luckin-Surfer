@model PaymentConfirmationViewModel

@{
    ViewData["Title"] = "Payment Confirmation";
    Layout = "_Layout";
}

<div class="payment-confirmation-container">
    <div class="confirmation-icon">✓</div>
    <h1 class="confirmation-title">Thank You for Your Order!</h1>
    <p class="confirmation-subtitle">Your payment was successful and your new GameCraft Card has been purchased.</p>

    <div class="order-summary">
        <h3>Order Summary</h3>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Date:</strong> @Model.OrderDate.ToString("F")</p>
        <p><strong>Purchased Item:</strong> @Model.PurchasedProduct.Name</p>
        <p><strong>Total Paid:</strong> $@Model.TotalAmount.ToString("F2")</p>
        <p><strong>Billed To:</strong> @Model.CustomerName</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.GameCardNumber))
    {
        <div class="gamecard-details">
            <h3>Your New GameCraft Card Number</h3>
            <p class="gamecard-number">@Model.GameCardNumber</p>
            <p>Please use this card to start accumulating points and unlocking benefits!</p>
        </div>
    }

    <div class="action-buttons">
        <a href="@Url.Action("MyAccount", "Account")" class="btn-primary">Go to My Account</a>
        <a href="@Url.Action("CardCatalog", "Home")" class="btn-secondary">Continue Browsing Cards</a>
    </div>
</div>